<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud2"
    tools:context="atlas_project.eventanalyser.About_main">

    <ImageButton
        android:id="@+id/home10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:background="@color/black_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/home10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/black_overlay"
                android:text="About ATLAS OpenData: Event Analyser"
                android:textColor="@color/colorButtonText"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/black_overlay"
                android:text="ATLAS OpenData: Event Analyser was created as part of a UCL Physics and Astronomy Department 3rd year group project. It is a mobile version of the ATLAS OpenData: Event Analyser website."
                android:textColor="@color/colorButtonText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:text="To run the full analysis go to: "
                android:textColor="@color/colorButtonText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/black_overlay"
                android:textColor="@color/colorButtonText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:text="For more information on ATLAS Open Data:"
                android:textColor="@color/colorButtonText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Link2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:textColor="@color/colorButtonText"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
